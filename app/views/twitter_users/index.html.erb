<h1>Listing twitter_users</h1>

<table>
  <tr>
    <th>Twitter uid</th>
    <th>Twitter username</th>
    <th>Avatar url</th>
    <th>Crawl interval</th>
    <th>Latest crawl fav count</th>
    <th>Last refreshed from twitter</th>
    <th>Followers count</th>
    <th>Favorites count</th>
    <th>Friends count</th>
    <th>Statuses count</th>
    <th>Created at</th>
    <th>Ready to be crawled</th>
    <th>Crawling enabled</th>
    <th>Latest crawl time</th>
    <th>Next crawl time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @twitter_users.each do |twitter_user| %>
  <tr>
    <td><%= twitter_user.twitter_uid %></td>
    <td><%= twitter_user.twitter_username %></td>
    <td><%= twitter_user.avatar_url %></td>
    <td><%= twitter_user.crawl_interval %></td>
    <td><%= twitter_user.latest_crawl_fav_count %></td>
    <td><%= twitter_user.last_refreshed_from_twitter %></td>
    <td><%= twitter_user.followers_count %></td>
    <td><%= twitter_user.favorites_count %></td>
    <td><%= twitter_user.friends_count %></td>
    <td><%= twitter_user.statuses_count %></td>
    <td><%= twitter_user.created_at %></td>
    <td><%= twitter_user.ready_to_be_crawled %></td>
    <td><%= twitter_user.crawling_enabled %></td>
    <td><%= twitter_user.latest_crawl_time %></td>
    <td><%= twitter_user.next_crawl_time %></td>
    <td><%= link_to 'Show', twitter_user %></td>
    <td><%= link_to 'Edit', edit_twitter_user_path(twitter_user) %></td>
    <td><%= link_to 'Destroy', twitter_user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

