= form_for @tweet do |f|
  -if @tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - @tweet.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :text
    = f.text_area :text

  .actions
    = f.submit 'Save'
